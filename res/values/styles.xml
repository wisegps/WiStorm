<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- dialog style--> 
	<style name="progressDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item><!--  边框  --> 
		<item name="android:windowIsFloating">true</item><!--  是否悬浮在activity上 --> 
		<item name="android:windowIsTranslucent">false</item> <!--  半透明 --> 
		<item name="android:windowNoTitle">true</item> <!--  无标题 --> 
		<item name="android:windowBackground">@android:color/transparent</item> <!--  背景透明 --> 
		<item name="android:backgroundDimEnabled">false</item>  <!--  模糊 --> 
		<item name="android:backgroundDimAmount">0.6</item> <!--  灰度 --> 
		<item name="android:windowContentOverlay">@null</item><!--  对话框是否有遮盖  --> 
		<!--   <item name="android:windowAnimationStyle">@style/dialog_animation</item>弹出或者进入时的动画效果 --> 
		<item name="android:colorBackgroundCacheHint">@null</item> <!--  背景缓存颜色  --> 
	</style>

<!--  WBottomPopupWindow  anim  --> 
	<style name="ws_anim_menu_bottom_bar">
	  	<item name="android:windowEnterAnimation">@anim/ws_menu_bottom_in</item> 
	  	<item name="android:windowExitAnimation">@anim/ws_menu_bottom_out</item> 
	</style>

	<!-- 标题返回按钮样式 -->
    <style name="title_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ws_nav_back</item>
    </style>
    
</resources>
